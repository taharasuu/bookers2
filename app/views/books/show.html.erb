

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <%= render 'books/user-info', user: @user %>
                <%= render 'books/new-book', book: @book %>
            </div>

            <div class="col-md-8 offset-md-1">
                <h2>Book detail</h2>
                <table class="table">
                    <tbody>
                        <tr>
                            <td><%= image_tag @user.get_profile_image(100, 100) %><br>
                                <%= link_to @user.name, user_path(@user) %></td>
                            <td><%= link_to @book.title, book_path(@book) %></td>
                            <td><%= @book.body %></td>
                            <% if @book.user == current_user %>
                                <td><%= link_to edit_book_path(@book) , class: "btn btn-sm btn-success" do %>
                                    <span>Edit</span>
                                    <% end %>
                                </td>
                                <td><%= link_to book_path(@book), class: "btn btn-sm btn-danger destroy_book_36790" , method: :delete, "data-confirm" => "本当に削除しますか？" do %>
                                    <span>Destroy</span>
                                    <% end %>
                                </td>
                            <% end %>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>